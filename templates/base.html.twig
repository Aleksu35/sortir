<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    {% block stylesheets %}{% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>

<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <!-- Navbar Brand/Logo -->
            <a class="navbar-brand h1" href="{{ path('app_home') }}">Logo Sortir.com</a>

            <!-- Toggler for Mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-decoration-none" href="#">Villes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-decoration-none" href="#">Campus</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-decoration-none" href="{{ path('app_home') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-decoration-none" href="{{ path('app_profile_update') }}">Mon profil</a>
                    </li>
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link text-decoration-none" href="{{ path('mes_sorties') }}">Modifier mes sorties</a>
                    </li>
                    {% endif %}

                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link text-decoration-none" href="{{ path('app_logout') }}" title="Se déconnecter">
                                Se déconnecter <img src="{{ asset('uploads/images/' ~ app.user.filename) }}" alt="profile-photo" class="img-fluid rounded border-2" style="max-width: 30px">
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link text-decoration-none" href="{{ path('app_login') }}" title="Se connecter">Se connecter</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
</header>

{% block body %}{% endblock %}
</body>
</html>
