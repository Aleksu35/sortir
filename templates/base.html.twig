<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">
    <link rel="icon" href="{{ asset('img/mirror-ball.png') }}" type="image/png">


    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>

<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <!-- Navbar Brand/Logo -->
            <a class="navbar-brand h1" href="{{ path('app_home') }}">
                <img src="{{ asset('img/disco-ball.png') }}" alt="Logo Sortir.com" style="height: 60px;">
            </a>

            <!-- Toggler for Mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link text-decoration-none" href="#">Villes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-decoration-none" href="#">Campus</a>
                    </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link text-decoration-none" href="{{ path('app_home') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-decoration-none" href="{{ path('app_profile_update') }}">Mon profil</a>
                    </li>
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link text-decoration-none" href="{{ path('mes-sorties') }}">Modifier mes sorties</a>
                    </li>
                    {% endif %}

                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link text-decoration-none" href="{{ path('app_logout') }}" title="Se déconnecter">
                                Se déconnecter <img src="{{ asset('uploads/images/' ~ app.user.filename) }}" alt="profile-photo" class=" rounded border-2" style="max-width: 30px">
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link text-decoration-none" href="{{ path('app_login') }}" title="Se connecter">Se connecter</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
</header>

{% block body %}

{% endblock %}
</body>
</html>
