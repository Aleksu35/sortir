{% extends 'base.html.twig' %}

{% block title %}Mes Sorties{% endblock %}

{% block body %}
    <h1>Mes Sorties</h1>

    {% if sorties is empty %}
        <p>Aucune sortie n'a été créée.</p>
    {% else %}
        <div class="list-group">
            {% for sortie in sorties %}
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">{{ sortie.nom }}</h5>
                        <p class="mb-1">Date : {{ sortie.dateHeureDebut|date('d/m/Y') }}</p>
                    </div>
                    <a href="{{ path('modifier-sortie', { 'id': sortie.id }) }}" class="btn btn-primary">
                        Modifier
                    </a>
                    <form action="{{ path('delete', { 'id': sortie.id }) }}" method="POST" style="display: inline-block;">
                        <input type="hidden" name="token" value="{{ csrf_token('delete' ~ sortie.id) }}">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </div>
            {% endfor %}
        </div>
    {% endif %}

{% endblock %}
