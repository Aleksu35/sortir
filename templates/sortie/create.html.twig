{% extends 'base.html.twig' %}

{% block title %}Créer une sortie{% endblock %}
    {% block body %}
        <div class="create-container">

            <h1>Créer une sortie</h1>
            {{ form_start(sortieForm) }}
            {{ form_widget(sortieForm) }}

            <div>
                <button type="submit" class="btn btn-custom" name="save" value="save">Enregistrer</button>
                <button type="submit" class="btn btn-custom" name="publish" value="publish">Publier la sortie</button>
            </div>
            {{ form_end(sortieForm) }}
        </div>
    {% endblock %}