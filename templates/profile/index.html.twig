{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="text-center mb-4">Mon profil</h2>
    <div class="container mt-4">

        {{ form_start(profileForm) }}

        <div class="row d-flex justify-content-center">
            <!-- Left -->
            <div class="col-md-4 text-center mb-3 p-4" style=" border-radius: 10px;">
                <img src="{{ asset('uploads/images/' ~ participant.filename) }}"
                     class="img-fluid rounded-circle mb-3"
                     alt="image" style="width: 120px; height: 120px; border: 5px solid white;">
                <h3>{{ participant.pseudo}}</h3>
                <p class="text-muted">{{ participant.campus.nom }}</p>

            </div>

            <!-- Right -->
            <div class="col-md-6 bg-white p-4" style="border-radius: 10px;">

                {% for field in profileForm %}
                    {% if field.vars.name not in ['filename', 'enregistrer', 'annuler'] %}
                        <div class="mb-3">
                            {{ form_widget(field) }}
                        </div>
                    {% endif %}
                {% endfor %}

                <div class="d-flex justify-content-evenly mt-3 ">
                   {{ form_widget(profileForm.enregistrer) }}
                    {{ form_widget(profileForm.annuler) }}
                </div>


            </div>
        </div>

        {{ form_end(profileForm) }}
    </div>
{% endblock %}

