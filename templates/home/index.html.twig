{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th scope="col">Nom de la sortie</th>
            <th scope="col">Date de la sortie</th>
            <th scope="col">Clôture</th>
            <th scope="col">Nombres Maximum</th>
            <th scope="col">Etat</th>
            <th scope="col">Inscrit</th>
            <th scope="col">Organisateur</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>

                <th scope="row">{{ sortie.nom }}</th>
                <td>{{ sortie.dateHeureDebut|date('d-m-Y') }}</td>
                <td>{{ sortie.dateLimiteInscription|date('d/m/Y') }}</td>
                <td>{{ sortie.nbInscriptionMax }}</td>
                <td>{{ sortie.etat }}</td>
                <td><p>Inscrit</p></td>
                <td>{{ sortie.participant.pseudo }}</td>
                <td><a href="{{ path('modifier-sortie', { 'id': sortie.id }) }}">Modifier</a></td>

            </tr>

        {% else %}
            <tr>
                <td colspan="8" class="text-center">Aucune sortie trouvée</td>  {# Correction du colspan pour inclure toutes les colonnes #}
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_sortie_create') }}" class="btn btn-primary">Créer une sortie</a>
{% endblock %}




